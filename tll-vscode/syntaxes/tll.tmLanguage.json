{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "TLL",
	"patterns": [
		{ "include": "#comments"     },
		{ "include": "#modifiers"    },
		{ "include": "#declarations" },
		{ "include": "#keywords"     },
		{ "include": "#symbols"      },
		{ "include": "#strings"      }
	],
	"repository": {
		"lineComment": {
			"patterns": [
				{
					"name": "comment.line.double-dash",
					"begin": "--",
					"end": "$"
				}
			]
		},
		"blockComment": {
			"patterns": [
				{
					"name": "comment.block",
					"begin": "/-",
					"end": "-/",
					"patterns": [
						{ "include": "#blockComment" }
					]
				}
			]
		},
		"comments": {
			"patterns": [
				{ "include": "#lineComment"  },
				{ "include": "#blockComment" }
			]
		},
		"modifiers": {
			"patterns": [
				{
					"name": "storage.modifier",
					"match": "#\\[[^\\]]*\\]"
				}
			]
		},
		"declarations": {
			"patterns": [
				{
					"comment": "declaration",
					"match": "\\b(def|tmpl|inductive|extern)\\b\\s+([[:word:]_']+)",
					"captures": {
						"1": { "name": "storage.type" },
						"2": { "name": "entity.name.function" }
					}
				},
				{
					"comment": "notation",
					"match": "\\b(notation)\\b",
					"name": "storage.type"
				},
				{
					"comment": "notation holes",
					"match": "%\\w+",
					"name": "variable.other"
				},
				{
					"comment": "miscellaneous",
					"match": "\\b(impl|where|of)\\b",
					"name": "storage.type"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"comment": "builtin types",
					"name": "entity.name.type",
					"match": "\\b(U|L|Type|forall|exists|IO)\\b"
				},
				{
					"comment": "let function",
					"match": "\\b(let\\s+fun)\\b\\s+([[:word:]_']+)\\b",
					"captures": {
						"1": { "name": "storage.type" },
						"2": { "name": "entity.name.function" },
						"3": { "name": "storage.type" }
					}
				},
				{
					"comment": "let binding",
					"name": "keyword.control.tll",
					"match": "\\b(let)\\b"
				},
				{
					"comment": "functions",
					"name": "storage.type",
					"match": "\\b(fn|ln|fun|lam)\\b"
				},
				{
					"comment": "pattern matching",
					"name": "keyword.control.tll",
					"match": "\\b(match|as|in|with|end)\\b"
				},
				{
					"comment": "absurd pattern",
					"name": "invalid.illegal",
					"match": "(!!)"
				},
				{
					"comment": "monad return",
					"name": "keyword.control.tll",
					"match": "\\b(return)\\b"
				}
			]
		},
		"symbols": {
			"patterns": [
				{
					"comment": "builtin symbols",
					"name": "constant.language",
					"match": "(->|→|-o|⊸|=>|⇒|:=|≔|\\?)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.tll",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.tll",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.tll"
}